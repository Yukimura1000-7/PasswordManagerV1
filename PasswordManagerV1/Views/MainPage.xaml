<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PasswordManagerV1.Views.MainPage"
             Title="Сохраненные аккаунты">

    <StackLayout Padding="20">
        <!-- Заголовок -->
        <Label Text="Добавить новый аккаунт" 
               FontSize="Large" 
               HorizontalOptions="Center" 
               Margin="0,0,0,10" />

        <!-- Кнопка добавления -->
        <Button Text="Добавить аккаунт" 
                Clicked="OnAddAccountClicked" 
                BackgroundColor="DodgerBlue" 
                TextColor="White" 
                CornerRadius="5" 
                HeightRequest="40" 
                Margin="0,10,0,0" />

        <!-- Список аккаунтов -->
        <ListView ItemsSource="{Binding Accounts}" 
                  ItemTapped="OnAccountSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="10">
                            <Label Text="{Binding ServiceName}" 
                                   FontAttributes="Bold" 
                                   FontSize="Medium" />
                            <Label Text="{Binding Login}" 
                                   FontSize="Small" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>