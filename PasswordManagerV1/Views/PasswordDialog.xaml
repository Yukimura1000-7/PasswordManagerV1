<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PasswordManagerV1.Views.PasswordDialog"
             Title="Введите пароль">

    <StackLayout Padding="20">
        <Label Text="Пароль" FontSize="Medium" />
        <Entry x:Name="PasswordEntry" IsPassword="True" Placeholder="Введите пароль" />

        <Button Text="Подтвердить" Clicked="OnConfirmClicked" BackgroundColor="DodgerBlue" TextColor="White" Margin="0,10,0,0" />
        <Button Text="Отмена" Clicked="OnCancelClicked" BackgroundColor="Gray" TextColor="White" />
    </StackLayout>
</ContentPage>