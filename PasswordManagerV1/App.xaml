<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PasswordManagerV1.App">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Стили для светлой темы -->
            <Style TargetType="Label" x:Key="LightText">
                <Setter Property="TextColor" Value="Black" />
            </Style>
            <Style TargetType="Entry" x:Key="LightInput">
                <Setter Property="BackgroundColor" Value="White" />
                <Setter Property="TextColor" Value="Black" />
            </Style>
            <Style TargetType="Button" x:Key="LightButton">
                <Setter Property="BackgroundColor" Value="#0078D4" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="CornerRadius" Value="10" />
            </Style>

            <!-- Стили для темной темы -->
            <Style TargetType="Label" x:Key="DarkText">
                <Setter Property="TextColor" Value="White" />
            </Style>
            <Style TargetType="Entry" x:Key="DarkInput">
                <Setter Property="BackgroundColor" Value="#1E1E1E" />
                <Setter Property="TextColor" Value="White" />
            </Style>
            <Style TargetType="Button" x:Key="DarkButton">
                <Setter Property="BackgroundColor" Value="#212121" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="CornerRadius" Value="10" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>